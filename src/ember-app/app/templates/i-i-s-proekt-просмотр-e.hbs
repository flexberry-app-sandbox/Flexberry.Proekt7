<h3 class="ui header">{{t "forms.i-i-s-proekt-просмотр-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-proekt-просмотр-e.время-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.время
      class=(if (v-get validationModel "время" "isInvalid") "error")
      data-test-i-i-s-proekt-просмотр-e-время=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "время" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-proekt-просмотр-e.справРод-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.справРод
      relationName="справРод"
      projection="СправРодL"
      title=(t "forms.i-i-s-proekt-просмотр-e.справРод-caption")
      readonly=readonly
      componentName="справРодLookup"
      class=(if (v-get validationModel "справРод" "isInvalid") "error")
      data-test-i-i-s-proekt-просмотр-e-справРод=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "справРод" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.справРод.фио
      class=(if (v-get validationModel.справРод "фио" "isInvalid") "error")
      label=(t "forms.i-i-s-proekt-просмотр-e.справРод.фио-caption")
      data-test-i-i-s-proekt-просмотр-e-справРод-фио=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.справРод "фио" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-proekt-просмотр-e.ученик-caption"}}</label>
    {{flexberry-groupedit
      componentName="ученикGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.ученик
      content=model.ученик
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "ученик" "isInvalid") "error")
      data-test-i-i-s-proekt-просмотр-e-ученик=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "ученик" "message")}}
  </div>
</form>
